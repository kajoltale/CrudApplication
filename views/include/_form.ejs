<!--Form handling-->
<form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <lable for="name" class="text-light">Name</lable>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Enter name">
        </div>
        <div class="form-group">
            <lable for="Email" class="text-light">Email</lable>
            <input type="text" name="email" value="" placeholder="Enter email">
        </div>
        <div class="form-group">
            <lable for="gender" class="text-light">Gender: </lable>
            <div class="radio inline">
                <input type="radio" id="maleRadio" name="gender" value="Male">
                <lable for="maleRadio" class="radio-label">Male</lable>
            </div>
            <div class="radio inline">
                <input type="radio" id="femaleRadio" name="gender" value="Female">
                <lable for="femaleRadio" class="radio-label">Female</lable>
            </div>
        </div>
        <div class="form-group">
            <lable for="gender" class="text-light">Status:</lable>
            <div class="radio inline">
                <input type="radio" id="activeRadio" name="status" value="Active">
                <lable for="activeRadio" class="radio-label">Active</lable>
            </div>
            <div class="radio inline">
                <input type="radio" id="inactiveRadio" name="status" value="Inactive">
                <lable for="inactiveRadio" class="radio-label">Inactive</lable>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>
    </div>
</form>
<!--/Form handling-->